<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.var17.PvzAppController">
    <VBox spacing="10" padding="10">
        <HBox spacing="10">
            <Label text="Город:"/>
            <ComboBox fx:id="cityComboBox" onAction="#applyFilter"/>
            <Label text="Тип:"/>
            <RadioButton fx:id="typeAccept" text="Приём" toggleGroup="$typeGroup" onAction="#applyFilter"/>
            <RadioButton fx:id="typeGive" text="Выдача" toggleGroup="$typeGroup" onAction="#applyFilter"/>
            <RadioButton fx:id="typeAll" text="Оба" toggleGroup="$typeGroup" onAction="#applyFilter" selected="true"/>
            <Label text="Регион:"/>
            <ComboBox fx:id="regionComboBox" onAction="#applyFilter"/>
            <Label fx:id="foundLabel" text="Найдено: 0"/>
        </HBox>
        <TableView fx:id="table" prefHeight="400">
            <columns>
                <TableColumn fx:id="colCity" text="Город"/>
                <TableColumn fx:id="colAddress" text="Адрес"/>
                <TableColumn fx:id="colType" text="Тип"/>
                <TableColumn fx:id="colCoordinates" text="Координаты"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>